<!DOCTYPE html>
<html>
  <head>
    <%- include('../components/head') %>
    <link rel="stylesheet" href="<%= origin %>/css/preview.css">
  </head>
  <body>
    <header class="text-center">
      <h1>
        Preview
      </h1>
    </header>
    <main class="main">
      <div class="title-box">
        <form action="/download" method="post" class="mb-3">
          <div class="mb-3">
            <label for="songTitle" class="form-label form-title">曲のタイトル</label>
            <input type="text" class="form-control input-style" id="songTitle" value="<%= songData.Title %>" placeholder="<%= songData.Title %>" name="title" required>
          </div>
          <div class="mb-3">
            <label for="songArtist" class="form-label form-title">アーティスト</label>
            <input type="text" class="form-control input-style" id="songArtist" value="<%= songData.Artist %>" placeholder="<%= songData.Artist %>" name="artist" required>
          </div>
          <label for="volumeRange" class="form-label form-title">音量</label>
          <input type="range" class="form-range" min="0" max="1" step="0.05" id="volumeRange" name="volume">
          <button type="submit" class="btn btn-primary">
            Download
          </button>
        </form>
      </div>
      <a href="/" class="btn btn-outline-primary">
        Back
      </a>
    </main>
    <div class="bg-img">
      <img src="<%= songData.imgUrl %>">
    </div>
  </body>
</html>